{
  "openapi": "3.0.0",
  "info": {
    "title": "Supermarket API",
    "version": "1.0.0",
    "description": "Simple REST API for products and stores using MongoDB."
  },
  "servers": [
    {
      "url": "https://webmart-6w30.onrender.com",
      "description": "Render Deployment"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Get all products",
        "responses": {
          "200": {
            "description": "A list of products"
          }
        }
      },
      "post": {
        "summary": "Create a new product",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Product" }
            }
          }
        },
        "responses": {
          "201": { "description": "Product created" },
          "422": { "description": "Validation error" }
        }
      }
    },

    "/products/{id}": {
      "get": {
        "summary": "Get a single product",
        "parameters": [
          { "$ref": "#/components/parameters/IdParam" }
        ],
        "responses": {
          "200": { "description": "Product found" },
          "404": { "description": "Product not found" }
        }
      },
      "put": {
        "summary": "Update a product",
        "parameters": [
          { "$ref": "#/components/parameters/IdParam" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Product" }
            }
          }
        },
        "responses": {
          "200": { "description": "Product updated" },
          "422": { "description": "Validation error" }
        }
      },
      "delete": {
        "summary": "Delete a product",
        "parameters": [
          { "$ref": "#/components/parameters/IdParam" }
        ],
        "responses": {
          "204": { "description": "Product deleted" },
          "404": { "description": "Product not found" }
        }
      }
    },

    "/stores": {
      "get": {
        "summary": "Get all stores",
        "responses": {
          "200": { "description": "A list of stores" }
        }
      },
      "post": {
        "summary": "Create a store",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Store" }
            }
          }
        },
        "responses": {
          "201": { "description": "Store created" },
          "422": { "description": "Validation error" }
        }
      }
    },

    "/stores/{id}": {
      "get": {
        "summary": "Get a single store",
        "parameters": [
          { "$ref": "#/components/parameters/IdParam" }
        ],
        "responses": {
          "200": { "description": "Store found" },
          "404": { "description": "Store not found" }
        }
      },
      "put": {
        "summary": "Update a store",
        "parameters": [
          { "$ref": "#/components/parameters/IdParam" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Store" }
            }
          }
        },
        "responses": {
          "200": { "description": "Store updated" },
          "422": { "description": "Validation error" }
        }
      },
      "delete": {
        "summary": "Delete a store",
        "parameters": [
          { "$ref": "#/components/parameters/IdParam" }
        ],
        "responses": {
          "204": { "description": "Store deleted" },
          "404": { "description": "Store not found" }
        }
      }
    }
  },

  "components": {
    "parameters": {
      "IdParam": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string" }
      }
    },
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "category": { "type": "string" },
          "price": { "type": "number" },
          "brand": { "type": "string" },
          "stock": { "type": "integer" },
          "refundable": { "type": "boolean" },
          "storeId": { "type": "string" },
          "expirationDate": { "type": "string", "format": "date" },
          "description": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["name", "category", "price", "brand", "stock"]
      },

      "Store": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string" },
          "country": { "type": "string" },
          "opening_hour": { "type": "string" },
          "closing_hour": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["official", "third-party"]
          }
        },
        "required": [
          "name",
          "address",
          "city",
          "country",
          "opening_hour",
          "closing_hour",
          "type"
        ]
      }
    }
  }
}
